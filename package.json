{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "Construindo uma API Rest com NodeJS utilizando TDD, Clean Architecture e Design Patterns.",
  "main": "index.js",
  "scripts": {
    "test": "jest --silent --colors --passWithNoTests",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test --findRelatedTests --noStackTrace",
    "test:ci": "npm test --coverage --noStackTrace"
  },
  "standard": {
    "env": ["jest"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucashenrique18/clean-node-api.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lucashenrique18/clean-node-api/issues"
  },
  "homepage": "https://github.com/lucashenrique18/clean-node-api#readme",
  "devDependencies": {
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.9",
    "standard": "^14.3.4"
  }
}
